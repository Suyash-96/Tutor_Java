<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/myStyle</item>
        <item name="textAppearanceHeadline6">@style/myHeadline6</item>
        <item name="textAppearanceSubtitle1">@style/mySubtitle1</item>
        <item name="textAppearanceBody2">@style/myBody2</item>
    </style>

    <style name="myStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAppearance">@style/mySubtitle1</item>
    </style>

    <style name="myHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mySubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="myBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopLeftCutButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/shapeAppearanceTLC</item>
    </style>

    <style name="TopRightCutButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/shapeAppearanceTRC</item>
    </style>

    <style name="BottomLeftCutButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/shapeAppearanceBLC</item>
    </style>

    <style name="BottomRightCutButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/shapeAppearanceBRC</item>
    </style>

    <style name="shapeAppearanceTLC">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="shapeAppearanceTRC">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="shapeAppearanceBLC">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="shapeAppearanceBRC">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
